    <Button x:Name="mapB" Text="Tárképre" Image="i5.png" ContentLayout="Top"  BorderColor="Transparent" BackgroundColor="Transparent" TextColor="#FFFFFF" Grid.Row="5" Grid.Column="0"/>
    -->
  </Grid>
</ContentPage>