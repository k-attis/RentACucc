<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentACucc.View.CuccLap">

  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="deleteTBI" Text="Törlés"/>
    <ToolbarItem x:Name="saveTBI" Text="Mentés"/>
    <ToolbarItem x:Name="cancelTBI" Text="Mégsem"/>
  </ContentPage.ToolbarItems>

  <StackLayout Orientation="Vertical">
    <Label Text="Sorozatszám"/>
    <Entry Text="{Binding SN}" VerticalOptions="Center"/>
    <Label Text="Név"/>
    <Entry Text="{Binding Nev}" VerticalOptions="Center"/>
  </StackLayout>

</ContentPage>